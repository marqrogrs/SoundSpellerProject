rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /lessons/{lesson} {
    	allow read, write: if true;
      // allow read: if request.auth.uid != null;
    }
    match /lessonSections/{section} {
      allow read: if request.auth.uid != null;
    }
    match /phonemes/{phoneme} {
      allow read: if request.auth.uid != null;
    }
    match /words/{word} {
      allow read: if request.auth.uid != null;
    }
    match /rules/{rule} {
    allow read, write: if true;
      // allow read: if request.auth.uid != null;
    }
    match /users/{user} {
      allow read, write: if request.auth.uid == user || request.auth.uid == resource.data.username || request.auth.uid == resource.data.educator;
    	match /classes/{class} {
      	allow write: if request.auth.uid == user;
        allow read;
      }
      match /customLessons/{customLesson} {
      	allow write: if request.auth.uid == user;
        allow read;
      }
      match /customLessonSections/{customLessonSection} {
      	allow write: if request.auth.uid == user;
        allow read;
      }
    }
  }
}